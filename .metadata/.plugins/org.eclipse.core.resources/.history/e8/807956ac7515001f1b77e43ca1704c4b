							<div class="row row-cols-lg-5 row-cols-2 g-3 pt-2 mb-5">
								<div class="col" th:each="favoritesPage : ${favoritesPage}">
									<a th:href="@{/login/__${favoritesPage.getId()}__}" class="link-dark nagoyameshi-card-link">
										<div class="card h-100">
											<img th:if="${favoritesPage.getStore().getPhotoName()}" th:src="@{/images/stores/__${favoritesPage.getStore().getPhotoName()}__}" class="w-100" alt="店舗画像">
											<img th:unless="${favoritesPage.getStore().getPhotoName()}" th:src="@{/images/noImage.png}" class="w-100" alt="NO IMAGE">
